<Window x:Class="WPF執行緒同步處理內容.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF執行緒同步處理內容"
        mc:Ignorable="d" 
        Title="WPF執行緒同步處理內容" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btn開始" Grid.Row="0" Grid.Column="0" Content="開始 有同步處理內容" Click="btn開始_Click" />
        <Button x:Name="btn取消" Grid.Row="1" Grid.Column="0" Content="取消 有同步處理內容" Click="btn取消_Click" IsEnabled="False" />
        <Button x:Name="btn開始_不同步執行緒的同步處理內容" Grid.Row="0" Grid.Column="1" Content="開始 不同步處理內容" Click="btn開始_不同步執行緒的同步處理內容_Click" />
        <Button x:Name="btn取消_不同步執行緒的同步處理內容" Grid.Row="1" Grid.Column="1" Content="取消 不同步處理內容" Click="btn取消_Click" IsEnabled="False" />

    </Grid>
</Window>
